{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "skipLibCheck": true,
    "allowJs": false,
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "sourceMap": false,
    "removeComments": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": [
    "app/**/*.ts"
  ]
}